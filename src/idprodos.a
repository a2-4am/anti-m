         sta   @match_buffer2+1
         ldx   @search+2
         bcs   @plus03
         dex
@plus03
         stx   @match_buffer2+2
         ldy   #$00

@match_all
         lda   $d1d1,y    ; modified at runtime
         cmp   #WILDCARD
         beq   @found_wild

@match_buffer2
         cmp   $d1d1,y    ; modified at runtime

@branch_cont
         bne   @cont_search

@found_wild
