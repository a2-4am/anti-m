         sta   @check_byte1+1
         sta   @check_byte2+1

; set low part of initial search position

         tya
         dey
         sty   @cont_search+1

; set return address

         clc
         adc   @match_buffer1+1
         tay
         bcc   @plus01
         inx
@plus01
